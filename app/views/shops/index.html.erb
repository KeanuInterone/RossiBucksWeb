<p id="notice"><%= notice %></p>



<div class="container">

<h1>Shops</h1>
<%= link_to 'New Shop', new_shop_path, class: 'btn btn-primary float-right' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center">Account number</th>
      <th class="text-center">Location</th>
      <th class="text-center">Total Shop points</th>
      <th class="text-center">Shop Rep</th>
      
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.name, shop %></td>
        <td class="text-center"><%= shop.account_number %></td>
        <td class="text-center"><%= shop.location %></td>
        <td class="text-center"><%= shop.get_points %></td>
        <td class="text-center"><%= link_to shop.reps.first.first_name + ' ' + shop.reps.first.last_name, shop.reps.first %></td>
        
        <!-- <td><%#= link_to 'Edit', edit_shop_path(shop) %></td> -->
        <!-- <td><%#= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>